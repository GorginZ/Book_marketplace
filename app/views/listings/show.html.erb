<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Isbn:</strong>
  <%= @listing.ISBN %>
</p>

<p>
  <strong>Author:</strong>
  <%= @listing.author %>
</p>

<p>
  <strong>Category:</strong>
  <%= Category.find_by_id(@listing.category_id).book_category %>
</p>

<p>
  <strong>Keywords:</strong>
  <%= @listing.keywords %>
</p>

<p>
  <strong>Available:</strong>
  <%= @listing.available %>
</p>

<p>
  <strong>Visible:</strong>
  <%= @listing.visible %>
</p>

<% if can? :edit, Listing %>
<%= link_to 'Edit', edit_listing_path(@listing) %> 
<%else%>
<%= link_to 'Back', listings_path %>
<%end%>
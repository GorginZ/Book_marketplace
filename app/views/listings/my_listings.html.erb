<p id="notice"><%= notice %></p>

<h1>My Listings</h1>
<div class= "container" >
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Summary</th>
        <th scope="col">Published</th>
        <th scope="col" colspan='3'><%= link_to 'New Listing', new_listing_path %></th>
      </tr>
    </thead>
    <tbody>
      <% @listings.each do |listing| %>
        <tr>
          <th scope="row"><%= link_to listing.title, listing %></th>
          <td><%= listing.available %></td>
          <td><%= listing.visible %></td>
          <% if can? :edit, listing %>
            <td><%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-info' %></td>
          <% end %>
          <% if can? :destroy, listing %>
            <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
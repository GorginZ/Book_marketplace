<% listing = @listing %>

<div class="col-lg-3">
    <div class= "thumbnail">
        <div class="caption">
            <h3><%= link_to truncate(listing.title), listing %></h3>
            <p><%= truncate(listing.author, length: 150) %></p>
            <% if listing.picture.attached? %>
              <%= (image_tag(listing.picture))  if listing.picture.attached? %>
            <% else %>
              <img src="https://picsum.photos/200" class="card-img-top" alt="Image missing">
            <% end %>        </div>
    </div>
</div>
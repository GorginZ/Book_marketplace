<% listing = @listing %>

<div class="col-lg-3">
    <div class= "thumbnail">
        <div class="caption">
            <h3><%= link_to truncate(listing.title), listing %></h3>
            <p><%= truncate(listing.author, length: 150) %></p>
            <%= image_tag listing.picture, :class => "card-img-top" if listing.picture.attached?%>
        </div>
    </div>
</div>
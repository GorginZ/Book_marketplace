<div class= "categories" >
  <% @categories.each do |category| %>
      <div class= "category">
        <div class= "thumbnail">
          <div class="caption">
            <h3><%= link_to truncate(category.book_category), category %></h3>
            <p><%= truncate(category.summary, length: 150) %></p>
            
          </div>
        </div>
      </div>
    <% end %>
</div>
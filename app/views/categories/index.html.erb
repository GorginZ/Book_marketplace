<p id="notice"><%= notice %></p>

<h1>Categories</h1>
<div>
  <% if can? :create, @category %>
    <%= link_to 'New Category', new_category_path, class: "btn btn-default" %>
  <% end %>
</div>

<div class= "container" >
  <div class="row">
      <% @categories.each do |category| %>
        <% @category = category %>
        <%= render partial: 'category_cards', category: @category %>  
    <% end %>
  </div>
</div>



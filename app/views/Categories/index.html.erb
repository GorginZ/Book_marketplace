<h1> We don't have many categories just yet </h1>
<div class= "categories" >
  <% @categories.each do |category| %>
      <div class= "category">
        <div class= "thumbnail">
          <div class="caption">
            <h3><%= link_to truncate(category.title), category %></h3>
            <p><%= truncate(category.summary, length: 150) %></p>
            <% if category.picture.attached? %>
              <%= (image_tag(category.picture))  if category.picture.attached? %>
            <% else %>
              <img src="https://picsum.photos/200" class="card-img-top" alt="Image missing">
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
</div>
